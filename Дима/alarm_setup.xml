<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/add_alarm"
        android:layout_width="291dp"
        android:layout_height="60dp"
        android:background="@color/material_dynamic_neutral10"
        android:text="add_alarm"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/x"
        app:layout_constraintRight_toLeftOf="@+id/v"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/x"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/material_dynamic_neutral10"
        android:onClick="Alarm"
        android:text="X"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/v"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="348dp"
        android:background="@color/material_dynamic_neutral10"
        android:onClick="Alarm"
        android:text="V"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layout_constraintTop_toBottomOf="@+id/add_alarm"
        tools:layout_editor_absoluteX="0dp">

        <TableRow>
            <Button
                android:layout_width="410dp"
                android:layout_height="400dp"
                android:backgroundTint="@color/material_dynamic_neutral30"
                android:layout_span="0" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>